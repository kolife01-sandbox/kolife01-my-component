{
  "name": "sample-component",
  "version": "0.1.0",
  "private": false,
  "main": "dist/sample-component.umd.js",
  "module": "dist/sample-component.esm.js",
  "unpkg": "dist/sample-component.min.js",
  "browser": {
    "./sfc": "src/sample-component.vue"
  },
  "scripts": {
    "serve": "vue-cli-service serve",
    "lint": "vue-cli-service lint",
    "build": "npm run build:umd & npm run build:es & npm run build:unpkg",
    "build:umd": "rollup --config build/rollup.config.js --format umd --file dist/sample-component.umd.js",
    "build:es": "rollup --config build/rollup.config.js --format es --file dist/sample-component.esm.js",
    "build:unpkg": "rollup --config build/rollup.config.js --format iife --file dist/sample-component.min.js"
  },
  "dependencies": {
    "core-js": "^3.6.5",
    "vue": "^2.6.11"
  },
  "devDependencies": {
    "@rollup/plugin-buble": "^0.21.3",
    "@rollup/plugin-commonjs": "^17.0.0",
    "@vue/cli-plugin-babel": "~4.5.0",
    "@vue/cli-plugin-eslint": "~4.5.0",
    "@vue/cli-service": "~4.5.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^6.7.2",
    "eslint-plugin-vue": "^6.2.2",
    "rollup": "^2.37.1",
    "rollup-plugin-vue": "^6.0.0",
    "vue-template-compiler": "^2.6.11"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "rules": {}
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
